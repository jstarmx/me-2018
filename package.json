{
  "name": "me-2018",
  "version": "0.0.0",
  "description": "My personal website rearchitected for 2018",
  "main": "index.js",
  "repository": "git@github.com:jstarmx/me-2018.git",
  "author": "jstarmx <jstar.mx@gmail.com>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "./node_modules/.bin/webpack-serve --content ./dist",
    "lint": "./node_modules/.bin/eslint ./ && ./node_modules/.bin/stylelint ./src/styles/**/*.scss",
    "precommit": "lint-staged",
    "build": "rm -rf ./dist && ./node_modules/.bin/webpack --mode development",
    "build:watch": "npm run build -- --watch",
    "dist": "./node_modules/.bin/webpack --mode production"
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint ./ --fix",
      "git add"
    ],
    "*.scss": [
      "./node_modules/.bin/stylelint ./src/styles/**/*.scss --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testURL": "http://localhost/"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "autoprefixer": "^9.1.0",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "ejs": "^2.6.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^0.14.3",
    "import-glob-loader": "^1.1.0",
    "lint-staged": "^7.2.0",
    "node-sass": "^4.11.0",
    "postcss-loader": "^2.1.6",
    "prettier": "^1.14.0",
    "pretty": "^2.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.21.0",
    "stylelint": "^9.4.0",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-prettier": "^1.0.6",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "cypress": "^3.2.0",
    "jest": "^23.4.2",
    "webpack-serve": "^2.0.2"
  }
}
